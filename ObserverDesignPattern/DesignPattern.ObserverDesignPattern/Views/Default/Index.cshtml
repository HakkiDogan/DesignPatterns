@model RegisterViewModel
@{
	Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<style>
	.form-group {
		display: flex;
		flex-direction: row;
		align-items: center;
	}

		.form-group label {
			flex: 1;
		}

		.form-group input {
			flex: 4;
		}
</style>

<div class="container pt-5 col-6">
	<div class="card">
		<div class="card-header text-center bg-info bg-opacity-50">
			<h2>Kullanıcı Kayıt Formu</h2>
		</div>
		<div class="card-body">
			<form method="post">
				<div class="form-group">
					<label>Adınız:</label>
					<input type="text" asp-for="Name" class="form-control" />
				</div>
				<br />
				<div class="form-group">
					<label>Soyadınız:</label>
					<input type="text" asp-for="Surname" class="form-control" />
				</div>
				<br />
				<div class="form-group">
					<label>Mail Adresiniz:</label>
					<input type="text" asp-for="Email" class="form-control" />
				</div>
				<br />
				<div class="form-group">
					<label>Kullanıcı Adınız:</label>
					<input type="text" asp-for="UserName" class="form-control" />
				</div>
				<br />
				<div class="form-group">
					<label>Şifreniz:</label>
					<input type="password" asp-for="Password" class="form-control" />
				</div>
				<br />
				<div class="row justify-content-center">
					<div class="col-4">
						<button class="btn btn-primary w-100">Kayıt Ol </button>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>
